<h1>{{ mensaje }}</h1>
<div class="py-4">
    <h2>Registro</h2>
    <hr class="w-50" />
    <form action="/registro" method="post" enctype="multipart/form-data">
        <div class="form-group row w-50 m-auto">
            <div class="form-group col-12 col-sm-6">
                <label>Email</label>
                <input class="form-control m-auto" id="email" name="email" value="valeria.torrealba@gmail.com"/>
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Nombre</label>
                <input class="form-control m-auto" id="nombre" name="nombre" value="Valeria"/>
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Password</label>
                <input class="form-control m-auto"  id="password" name="password" value="123456"/>
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Repita la password</label>
                <input class="form-control m-auto" id="password_confirm" name="password_confirm" value="123456"/>
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>AÃ±os de experiencia</label>
                <input class="form-control m-auto" id="anos_experiencia" name="anos_experiencia" value="10"/>
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Especialidad</label>
                <input class="form-control m-auto" id="especialidad" name="especialidad" value="Ciclista"/>
            </div>
            <div class="form-group col-12 col-sm-12">
                <label>Foto de perfil</label>
                <input type="file" name="foto" />
            </div>
        </div>
        <button class="btn btn-info mb-3">Registrarme</button>
        <p>{{> iniciar_sesion}}</p>
    </form>
</div>


