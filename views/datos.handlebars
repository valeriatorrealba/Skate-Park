<h1>{{ mensaje }}</h1>
<div class="py-4">
    <h2>Datos del perfil</h2>
    <hr class="w-50" />
    <form action="/datos" method="post">
        <div class="form-group row w-50 m-auto">
            <div class="form-group col-12 col-sm-6">
                <label>Email</label>
                <input class="form-control m-auto" id="email" name="email" value="{{usuario.email}}" disabled />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Nombre</label>
                <input class="form-control m-auto" id="nombre" name="nombre" value="{{usuario.nombre}}" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Password</label>
                <input type="password" class="form-control m-auto" id="password" name="password" value="{{usuario.password}}" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Repita la password</label>
                <input type="password" class="form-control m-auto" id="password_confirm" name="password_confirm" value="{{usuario.password}}" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>AÃ±os de experiencia</label>
                <input class="form-control m-auto" id="anos_experiencia" name="anos_experiencia" value="{{usuario.anos_experiencia}}" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Especialidad</label>
                <input class="form-control m-auto" id="especialidad" name="especialidad" value="{{usuario.especialidad}}" />
            </div>
        </div>
        <div class="mb-1">
            <button class="btn btn-primary">Actualizar</button>
        </div>
        <div>
            <button class="btn btn-danger">Eliminar cuenta</button>
        </div>
    </form>
</div>
